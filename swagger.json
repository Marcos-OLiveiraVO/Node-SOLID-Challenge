                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  },
                  "exemple": {
                    "name": "john doe",
                    "email": "johndoe@mail.com"
                  }
                }
              }
            }
          },
